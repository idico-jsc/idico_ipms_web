# Environment Variables Template
# Copy this file to .env.development or .env.production and fill in the values

# API Configuration
VITE_API_BASE_URL=

# Frappe API Configuration
VITE_FRAPPE_URL=https://your-frappe-server.frappe.cloud
VITE_FRAPPE_USE_TOKEN=true
VITE_FRAPPE_TOKEN_EXPIRY_DAYS=365

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# Server Client ID for native mobile apps (Android/iOS)
VITE_GOOGLE_SERVER_CLIENT_ID=your-google-server-client-id.apps.googleusercontent.com

# Forgot Password Configuration
VITE_RETRY_DELAY=
VITE_PASSWORD_STRENGTH=

# App Configuration
VITE_APP_NAME=
VITE_APP_ENV=

# Feature Flags
VITE_ENABLE_DEBUG=
VITE_ENABLE_MOCK_API=
